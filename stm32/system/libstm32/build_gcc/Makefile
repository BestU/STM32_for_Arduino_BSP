# Makefile for compiling libchip

SUBMAKE_OPTIONS=--no-builtin-rules --no-builtin-variables --no-print-directory

#-------------------------------------------------------------------------------
# Rules
#-------------------------------------------------------------------------------

# libstm_stm32f051_gcc_rel.a 
#all: libstm_stm32f051_gcc_rel.a 
all: libstm_stm32f051_gcc_rel.a 

.PHONY: libstm_stm32f051_gcc_rel.a
libstm_stm32f051_gcc_rel.a:
	@echo ------------------------------------------------------------------------------------
	@echo --- Making $@
	@echo ---
	@$(MAKE) CHIP=STM32F051 $(SUBMAKE_OPTIONS) OUTPUT_BIN=../../../variants/UNO -f stm32.mk
	@echo ------------------------------------------------------------------------------------


.PHONY: clean
clean:
	@echo ------------------------------------------------------------------------------------

	@echo --- Cleaning stm32f051 release and debug
	@$(MAKE) CHIP=STM32F051 $(SUBMAKE_OPTIONS) -f stm32.mk $@
	@echo ------------------------------------------------------------------------------------


